    <script>
        // --- MOCK FOR LOCAL DEBUGGING ---
        // This block simulates google.script.run when the code is running outside of Google Apps Script
        if (typeof google === "undefined") {
            console.warn("Mocking google.script.run for local preview.");
            window.google = {
                script: {
                    run: {
                        withSuccessHandler: function (fn) {
                            var runner = Object.create(this);
                            runner._success = fn;
                            return runner;
                        },
                        withFailureHandler: function (fn) {
                            var runner = Object.create(this);
                            runner._failure = fn;
                            return runner;
                        },
                        getProducts: function () {
                            var self = this;
                            setTimeout(function () {
                                if (self._success) self._success([
                                    { name: 'Абонемент 8 занятий', type: 'Бассейн', fullPrice: 5000, category: 'Взрослые' },
                                    { name: 'Разовое посещение', type: 'Ванны', fullPrice: 1500, category: 'Общие' },
                                    { name: 'Персональная тренировка', type: 'Зал', fullPrice: 2000, category: 'Индивид.' },
                                    { name: 'Возврат абонемента', type: 'Админ', fullPrice: 0 }
                                ]);
                            }, 500);
                        },
                        getClients: function () {
                            var self = this;
                            setTimeout(function () {
                                if (self._success) self._success([
                                    { name: 'Иванов Иван', mobile: '+7 900 123-45-67' },
                                    { name: 'Петров Петр', mobile: '+7 900 987-65-43' }
                                ]);
                            }, 600);
                        },
                        getStaff: function () {
                            var self = this;
                            setTimeout(function () {
                                if (self._success) self._success([
                                    { name: 'Тренер А', type: 'Бассейн' },
                                    { name: 'Тренер Б', type: 'Ванны' }
                                ]);
                            }, 700);
                        },
                        getTasks: function () {
                            var self = this;
                            setTimeout(function () {
                                if (self._success) self._success([
                                    { task: 'Позвонить клиенту: Истекает абонемент (Иванов)', link: '#' },
                                    { task: 'Подтвердить запись на завтра', link: '#' }
                                ]);
                            }, 400);
                        },
                        createSale: function (payload) {
                            console.log("Mock createSale payload:", payload);
                            var self = this;
                            setTimeout(function () {
                                if (self._success) self._success({ row: 999 });
                            }, 1000);
                        },
                        openTaskCell: function (link) {
                            console.log("Mock openTaskCell:", link);
                        }
                    }
                }
            };
        }
        // --- END MOCK ---

        var products = [], clients = [], staff = [];
        var sb_selectedProduct = null;
        var sb_defaultDiscount = 0;
        var sb_matchedClient = null;

        function el(tag, props) { var e = document.createElement(tag); if (props) Object.keys(props).forEach(function (k) { if (k === 'text') e.textContent = props[k]; else e.setAttribute(k, props[k]); }); return e; }
        function setText(id, txt) { var el = document.getElementById(id); if (el) el.textContent = txt || ''; }
        function setHtml(id, html) { var el = document.getElementById(id); if (el) el.innerHTML = html || ''; }

        // 10. Анимация сворачивания через CSS классы
        function collapseToggle(wrapperId) {
            var wrapper = document.getElementById(wrapperId);
            var header = wrapper.querySelector('.section-header');
            if (!wrapper) return;
            // Toggle class
            wrapper.classList.toggle('collapsed');
            // Update ARIA
            var isCollapsed = wrapper.classList.contains('collapsed');
            header.setAttribute('aria-expanded', !isCollapsed);
        }

        function initSidebar() {
            // Загрузка данных
            google.script.run.withSuccessHandler(function (r) { products = r || []; initProductTA(); }).getProducts();
            google.script.run.withSuccessHandler(function (r) { clients = r || []; initClientTA(); }).getClients();
            google.script.run.withSuccessHandler(function (r) { staff = r || []; initTrainerTA(); }).getStaff();

            loadTasks();

            // Дата по умолчанию
            var dt = new Date();
            document.getElementById('sb_date').value = String(dt.getDate()).padStart(2, '0') + '.' + String(dt.getMonth() + 1).padStart(2, '0') + '.' + dt.getFullYear();

            // События
            document.getElementById('sb_discount').addEventListener('input', recalcSBFinal);
            document.getElementById('sb_product').addEventListener('blur', onSBProductBlur);
            document.getElementById('sb_add').addEventListener('click', onSBAdd);
            // Событие обновления задач с предотвращением всплытия клика (чтобы не сворачивалась секция)
            document.getElementById('tasks_refresh').addEventListener('click', function (e) {
                e.stopPropagation();
                loadTasks();
            });

            // Хендлеры сворачивания
            document.getElementById('saleHeader').addEventListener('click', function () { collapseToggle('saleSectionWrapper'); });
            document.getElementById('tasksHeader').addEventListener('click', function () { collapseToggle('tasksSectionWrapper'); });
            // Accessibility
            ['saleHeader', 'tasksHeader'].forEach(function (id) {
                document.getElementById(id).addEventListener('keydown', function (e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        collapseToggle(id.replace('Header', 'SectionWrapper'));
                    }
                });
            });
        }

        // ------- TASKS -------
        function renderTasks(tasks) {
            var list = document.getElementById('tasks_list');
            list.innerHTML = '';
            if (!tasks || !tasks.length) { document.getElementById('tasks_empty').style.display = 'block'; return; }
            document.getElementById('tasks_empty').style.display = 'none';
            tasks.forEach(function (t) {
                var wrap = el('div'); wrap.className = 'task';
                var txt = el('div'); txt.className = 'txt'; txt.textContent = t.task || '';
                wrap.appendChild(txt);
                if (t.link) {
                    var btn = el('button'); btn.className = 'link-btn'; btn.textContent = 'Перейти';
                    btn.addEventListener('click', function () {
                        google.script.run.withFailureHandler(function (err) {
                            alert('Не удалось перейти: ' + (err && err.message ? err.message : err));
                        }).openTaskCell(t.link);
                    });
                    wrap.appendChild(btn);
                }
                list.appendChild(wrap);
            });
        }

        function loadTasks() {
            var list = document.getElementById('tasks_list');
            list.style.opacity = '0.5'; // Визуальный эффект загрузки
            google.script.run.withSuccessHandler(function (tasks) {
                list.style.opacity = '1';
                renderTasks(tasks);
            }).getTasks();
        }

        // ------- Typeaheads -------
        // (Логика автокомплита оставлена прежней, добавлены улучшения UX)
        function initProductTA() {
            attachTypeahead('sb_product', 'sb_product_list', products, function (item) {
                sb_selectedProduct = item;
                document.getElementById('sb_product').value = item.name || '';
                sb_defaultDiscount = computeDefaultDiscount(item);
                // Сброс скидки в формат с запятой если надо, но пока ставим целое
                document.getElementById('sb_discount').value = sb_defaultDiscount;
                var info = (item.type ? item.type : '') + (item.category ? (' / ' + item.category) : '');
                setText('sb_product_note', info);
                if (['сгорел', 'возврат абонемента', 'перерасчёт'].indexOf((item.name || '').toString().toLowerCase()) !== -1) {
                    setText('sb_product_err', 'Запрещённый продукт'); sb_selectedProduct = null;
                } else setText('sb_product_err', '');
                recalcSBFinal();
                setText('sb_trainer_note', item.type ? 'Показываются тренеры: ' + item.type : '');
            });
        }

        function initClientTA() {
            attachTypeahead('sb_client', 'sb_client_list', clients, function (item) {
                document.getElementById('sb_client').value = item.name || item.mobile || '';
                sb_matchedClient = item;
                setText('sb_client_note', 'Выбран: ' + (item.mobile ? (item.mobile) : ''));
                setText('sb_client_err', '');
            });
        }

        function initTrainerTA() {
            attachTypeaheadFiltered('sb_trainer', 'sb_trainer_list', staff, function (item) {
                document.getElementById('sb_trainer').value = item.name || '';
                setText('sb_trainer_note', 'Тренер: ' + (item.name || '') + (item.type ? (' (' + item.type + ')') : ''));
            });
        }

        function attachTypeahead(inpId, listId, srcArray, onSelect) {
            var inp = document.getElementById(inpId), list = document.getElementById(listId);
            inp.addEventListener('input', function () {
                var q = inp.value.trim().toLowerCase();
                if (!q) { list.style.display = 'none'; return; }
                var matches = [];
                for (var i = 0; i < srcArray.length; i++) {
                    var it = srcArray[i];
                    var hay = ((it.name || '') + ' ' + (it.mobile || '') + ' ' + (it.email || '') + ' ' + (it.type || '') + ' ' + (it.category || '')).toLowerCase();
                    if (hay.indexOf(q) !== -1) matches.push(it);
                    if (matches.length >= 10) break;
                }
                if (!matches.length) { list.style.display = 'none'; return; }
                list.innerHTML = '';
                matches.forEach(function (m) {
                    var d = el('div'); d.className = 'typeahead-item';
                    d.textContent = (m.name || '') + (m.mobile ? (' | ' + m.mobile) : '');
                    d.addEventListener('click', function () { list.style.display = 'none'; onSelect(m); });
                    list.appendChild(d);
                });
                list.style.display = 'block';
            });
            // Закрытие по клику вне
            document.addEventListener('click', function (e) { if (!list.contains(e.target) && e.target !== inp) list.style.display = 'none'; });
        }

        function attachTypeaheadFiltered(inpId, listId, srcArray, onSelect) {
            var inp = document.getElementById(inpId), list = document.getElementById(listId);
            inp.addEventListener('input', function () {
                var q = inp.value.trim().toLowerCase();
                var needType = sb_selectedProduct ? sb_selectedProduct.type : null;
                // Если запрос пустой, но выбран продукт - показываем всех тренеров этого типа
                if (!q && !needType) { list.style.display = 'none'; return; }
                var matches = [];
                for (var i = 0; i < srcArray.length; i++) {
                    var it = srcArray[i];
                    if (!it.name) continue;
                    if (it.type === 'Администратор') continue;
                    if (needType && it.type !== needType) continue;
                    var hay = (it.name + ' ' + (it.email || '') + ' ' + (it.type || '')).toLowerCase();
                    // Фильтр по строке, если она введена
                    if (q && hay.indexOf(q) === -1) continue;
                    matches.push(it);
                    if (matches.length >= 10) break;
                }
                if (!matches.length) { list.style.display = 'none'; return; }
                list.innerHTML = '';
                matches.forEach(function (m) {
                    var d = el('div'); d.className = 'typeahead-item'; d.textContent = (m.name || '') + (m.type ? (' (' + m.type + ')') : '');
                    d.addEventListener('click', function () { list.style.display = 'none'; onSelect(m); });
                    list.appendChild(d);
                });
                list.style.display = 'block';
            });
            document.addEventListener('click', function (e) { if (!list.contains(e.target) && e.target !== inp) list.style.display = 'none'; });
        }

        function computeDefaultDiscount(product) {
            if (!product) return 0;
            var t = product.type || '';
            var nameLc = (product.name || '').toString().toLowerCase();
            if ((t === 'Бассейн' || t === 'Ванны') && nameLc.indexOf('пробное') !== -1) return 50;
            if (t === 'Бассейн' || t === 'Ванны') return 15;
            return 0;
        }

        // 3. Логика расчета стоимости и отображения
        function recalcSBFinal() {
            var summaryBlock = document.getElementById('price_summary_block');
            if (!sb_selectedProduct || typeof sb_selectedProduct.fullPrice === 'undefined') {
                summaryBlock.style.display = 'none';
                return;
            }
            summaryBlock.style.display = 'block';

            var base = Number(sb_selectedProduct.fullPrice) || 0;
            // 2. Обработка запятой в скидке
            var discStr = document.getElementById('sb_discount').value || '0';
            discStr = discStr.replace(',', '.'); // замена запятой на точку
            var disc = parseFloat(discStr);

            if (isNaN(disc)) disc = 0;
            if (disc < 0) disc = 0;
            if (disc > 100) disc = 100;
            var final = Math.round((base * (1 - disc / 100)) * 100) / 100;
            var saved = Math.round((base - final) * 100) / 100;

            // Форматирование HTML вывода
            var html = '<div><b>Базовая цена:</b> ' + base + '</div>' +
                '<div style="margin-top:4px;"><b>Окончательная:</b> <span style="font-size:1.1em; color:#2e7d32;">' + final + '</span></div>' +
                (saved > 0 ? '<div style="margin-top:4px; font-size:0.9em; color:#666;">Скидка: ' + saved + ' (' + disc + '%)</div>' : '');
            setHtml('price_summary_block', html);

            // Валидация для комментария
            if (disc > sb_defaultDiscount && sb_defaultDiscount > 0) setText('sb_comment_err', 'Комментарий обязателен при повышенной скидке');
            else setText('sb_comment_err', '');
        }

        function onSBProductBlur() {
            var v = document.getElementById('sb_product').value.trim().toLowerCase();
            if (!v) return;
            // Попытка найти продукт, если пользователь ввел его руками, а не выбрал из списка
            var found = products.find(function (p) { return p.name && p.name.toLowerCase() === v; });
            if (found) {
                sb_selectedProduct = found;
                sb_defaultDiscount = computeDefaultDiscount(found);
                document.getElementById('sb_discount').value = sb_defaultDiscount;
                setText('sb_product_note', (found.type ? found.type : ''));
                setText('sb_product_err', '');
                recalcSBFinal();
                setText('sb_trainer_note', found.type ? 'Показываются тренеры: ' + found.type : '');
            }
        }

        function onSBAdd() {
            ['sb_date_err', 'sb_client_err', 'sb_product_err', 'sb_discount_err', 'sb_payment_err', 'sb_comment_err', 'sb_status'].forEach(function (id) { setText(id, ''); });
            var ok = true;
            var date = document.getElementById('sb_date').value.trim();
            if (!date) { setText('sb_date_err', 'Укажите дату'); ok = false; }

            var clientVal = document.getElementById('sb_client').value.trim();
            if (!clientVal) { setText('sb_client_err', 'Клиент обязателен'); ok = false; }
            else {
                sb_matchedClient = clients.find(function (c) { return (c.name && c.name.toLowerCase() === clientVal.toLowerCase()) || (c.mobile && c.mobile.replace(/\D/g, '') === clientVal.replace(/\D/g, '')); });
                if (!sb_matchedClient) { setText('sb_client_err', 'Клиент не найден в Справочнике'); ok = false; }
            }

            var prodVal = document.getElementById('sb_product').value.trim();
            if (!prodVal) { setText('sb_product_err', 'Выберите продукт'); ok = false; }
            if (!sb_selectedProduct || sb_selectedProduct.name.toLowerCase() !== prodVal.toLowerCase()) {
                var found = products.find(function (p) { return p.name && p.name.toLowerCase() === prodVal.toLowerCase(); });
                if (!found) { setText('sb_product_err', 'Продукт не найден'); ok = false; }
                else {
                    sb_selectedProduct = found;
                    // пересчитываем дефолт скидку только если продукт сменился реально
                    // здесь упрощаем: просто берем текущую
                    recalcSBFinal();
                }
            }
            if (sb_selectedProduct && ['сгорел', 'возврат абонемента', 'перерасчёт'].indexOf(sb_selectedProduct.name.toLowerCase()) !== -1) { setText('sb_product_err', 'Запрещённый продукт'); ok = false; }

            // Парсинг скидки с запятой
            var discStr = document.getElementById('sb_discount').value || '0';
            var discount = parseFloat(discStr.replace(',', '.'));
            if (isNaN(discount) || discount < 0 || discount > 100) { setText('sb_discount_err', 'Неверная скидка'); ok = false; }

            var radios = document.getElementsByName('sb_payment');
            var payment = '';
            for (var r = 0; r < radios.length; r++) if (radios[r].checked) payment = radios[r].value;
            if (!payment) { setText('sb_payment_err', 'Выберите оплату'); ok = false; }

            var comment = document.getElementById('sb_comment').value || '';
            if (discount > sb_defaultDiscount && sb_defaultDiscount > 0 && comment.trim() === '') { setText('sb_comment_err', 'Комментарий обязателен при повышенной скидке'); ok = false; }

            if (!ok) return;

            var payload = {
                date: date,
                client: { displayName: sb_matchedClient.name, mobile: sb_matchedClient.mobile },
                product: { name: sb_selectedProduct.name, type: sb_selectedProduct.type, category: sb_selectedProduct.category, fullPrice: sb_selectedProduct.fullPrice, quantity: sb_selectedProduct.quantity },
                qty: sb_selectedProduct.quantity || 1,
                discount: discount,
                paymentMethod: payment,
                comment: comment,
                trainer: { name: document.getElementById('sb_trainer').value || '' }
            };

            var btn = document.getElementById('sb_add');
            btn.disabled = true;
            btn.textContent = 'Сохранение...';
            // Анимация отправки
            setText('sb_status', 'Запись в таблицу...');

            google.script.run.withSuccessHandler(function (res) {
                setText('sb_status', 'Готово! Строка #' + (res && res.row ? res.row : '?'));
                btn.disabled = false;
                btn.textContent = 'Добавить продажу';
                // Очистка полей
                document.getElementById('sb_client').value = '';
                document.getElementById('sb_product').value = '';
                document.getElementById('sb_discount').value = 0;
                document.getElementById('sb_comment').value = '';
                // Сброс радио кнопок
                var radios = document.getElementsByName('sb_payment');
                for (var i = 0; i < radios.length; i++) radios[i].checked = false;

                setHtml('price_summary_block', '');
                document.getElementById('price_summary_block').style.display = 'none';

                sb_selectedProduct = null; sb_matchedClient = null; sb_defaultDiscount = 0;
                loadTasks();
                setTimeout(function () { setText('sb_status', ''); }, 4000);
            }).withFailureHandler(function (err) {
                var msg = (err && err.message) ? err.message : String(err);
                setText('sb_status', 'Ошибка: ' + msg);
                btn.disabled = false;
                btn.textContent = 'Добавить продажу';
            }).createSale(payload);
        }

        document.addEventListener('DOMContentLoaded', initSidebar);
    </script>
</body>

</html>